<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core">

  <div metal:define-macro="text-field-view"
      id="parent-fieldname-text" class="stx"
      tal:define="text view/text"
      tal:condition="text"
      tal:attributes="class view/text_class">
    <div metal:define-slot="inside" tal:replace="structure text">The body</div>
  </div>

  <metal:listingmacro define-macro="listing">
    <tal:results define="batch view/batch; events view/get_events">
      <tal:listing condition="batch">
        <div class="list-agenda row" metal:define-slot="entries">
          <tal:repeat repeat="item events" metal:define-macro="entries">
            <metal:block define-slot="entry">
              <div class="col-md-3 col-sm-6 col-xs-12">
                <a class="event-highlighted event-img" tal:attributes="href item/url;"
                   data-toggle="tooltip" data-placement="top" title="Tooltip on top">
                  <span class="event-time">
                    <span class="event-time--wrap" tal:define="type python: view.dateType(item)">
                      <block metal:use-macro="context/macros-comunitats/sameday_samemonth"></block>
                      <block metal:use-macro="context/macros-comunitats/difday_samemonth"></block>
                      <block metal:use-macro="context/macros-comunitats/difday_difmonth"></block>
                    </span>
                  </span>
                  <h2 class="event-title" tal:content="item/title">Setmana internacional de l’accés obert</h2>
                  <!-- <tal:img condition="item/imatge" tal:define="tamany string:preview">
                    <block metal:use-macro="context/macros-comunitats/imatge"></block>
                  </tal:img>
                  <tal:category tal:condition="item/category">
                    <p class="event-category" tal:content="item/category">Jornades de portes obertes</p>
                  </tal:category>
                  <tal:notcategory tal:condition="not: item/category">
                    <p class="event-category">&nbsp;</p>
                  </tal:notcategory> -->
                </a>
              </div>
            </metal:block>
          </tal:repeat>
        </div>

        <div metal:use-macro="context/batch_macros/macros/navigation" />

      </tal:listing>

      <metal:empty metal:define-slot="no_items_in_listing">
        <p class="discreet"
            tal:condition="not: view/batch"
            tal:content="view/no_items_message">
          There are currently no items in this folder.
        </p>
      </metal:empty>

    </tal:results>
  </metal:listingmacro>

</metal:block>
</metal:content-core>

</body>
</html>
